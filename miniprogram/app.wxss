@import '/styles/main.wxss';
@import '/styles/tailwind.wxss';

page {
  background: #fcfcfc;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --foreground: #aed3ff;
  --background: #2d71f5;
  --light-foreground: #e9f0f9;
  --light-white: #f9f9f9;
  --muted: #a3a3a3;
  --muted-foreground: #d4d4d4;
  --muted-border: #270e0e;
  --primary: #93a7ba;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.custom-placeholder {
  color: var(--muted-foreground);
  font-weight: 350;
}

/* Border */
.border-muted {
  border-color: var(--muted);
}

.border-gray {
  border-color: var(--muted-border);
}

.border-background {
  border-color: var(--background);
}

/* Background */
.bg-foreground {
  background-color: var(--foreground);
}

.bg-lighter-foreground {
  background-color: var(--light-foreground);
}

.bg-primary {
  background-color: var(--primary);
}

.bg-background {
  background-color: var(--background);
}

.bg-lighter-white {
  background-color: var(--light-white);
}

.bg-muted {
  background-color: var(--muted);
}

/* Text */
.text-background {
  color: var(--background);
}

.text-muted {
  color: var(--muted);
}

.text-muted-foreground {
  color: var(--muted-foreground);
}

.text-primary {
  color: var(--foreground);
}

.text-primary {
  color: var(--primary);
}

.separator {
  margin: 2px 0;
  border-bottom: 1px solid var(--muted-border);
}
