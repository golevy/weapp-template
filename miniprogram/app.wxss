@import '/styles/main.wxss';
@import '/styles/tailwind.wxss';

page {
  background: #fcfcfc;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --foreground: #aed3ff;
  --background: #2d71f5;
  --light-white: #f9f9f9;
  --muted: #a3a3a3;
  --muted-foreground: #d4d4d4;
  --primary: #93a7ba;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.border-muted {
  border-color: var(--muted);
}

.border-background {
  border-color: var(--background);
}

.bg-foreground {
  background-color: var(--foreground);
}

.bg-primary {
  background-color: var(--primary);
}

.bg-background {
  background-color: var(--background);
}

.bg-muted {
  background-color: var(--muted);
}

.text-background {
  color: var(--background);
}

.text-muted {
  color: var(--muted);
}

.text-muted-foreground {
  color: var(--muted-foreground);
}

.text-primary {
  color: var(--foreground);
}

.text-primary {
  color: var(--primary);
}

.separator {
  margin: 2px 0;
  border-bottom: 1px solid var(--muted);
}

.custom-placeholder {
  color: var(--muted-foreground);
  font-weight: 350;
}

.truncate-ellipsis {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 450rpx;
}
